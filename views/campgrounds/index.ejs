<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp </h1>
            <p>The best campgrounds to choose from!</p>
             <p>
                 <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
             </p>
         </div>
    </header>
    
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% camps.forEach(function(camp) { %>
        <div class="col-mid-3 col-sm-6"> 
            <div class="thumbnail">
                <img src="<%= camp.image %>">
                <div class="caption">
                    <h4><%= camp.name %>  </h4>
                </div>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">More Info</a>
                </p>
            </div>
        </div>
        <% }) %>
    </div>
</div>



